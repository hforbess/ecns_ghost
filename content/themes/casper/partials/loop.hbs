{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
  <div class="row article">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div class="panel panel-default">
  <header class="panel-heading"><h2 class="post-title"><a href="{{url}}">{{title}}</a></h2></header>
  <section class="panel-body"><p>{{excerpt words="75"}} <a class="read-more" href="{{url}}">&raquo;</a></p></section>
  <footer class="panel-footer">{{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
        {{tags prefix=" on "}}
        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></footer>
</div>


 </div>
  <div class="col-sm-2"></div>
</div>
{{/foreach}}

